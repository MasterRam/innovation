{
  "name": "mongo-apis",
  "version": "1.0.0",
  "description": "Sample Node Api ",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./lib/server.ts",
    "test": "tsc --build ./tsconfig.test.json && echo 234234 && mocha ./test/**/*.spec.js",
    "start": "nodemon ./dist/server.js",
    "prod": "npm run build && npm run start",
    "nf": "nodemon --watch './lib/**/*.ts' --ignore './lib/**/*.spec.ts' --exec ts-node ./lib/server.ts"
  },
  "keywords": [
    "Node",
    "Mongo",
    "Api"
  ],
