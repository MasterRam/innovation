    "nodemon": "^1.18.9"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.3.7",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "typescript": "^3.2.4",
    "typings": "^2.1.1"
